{
	"manifest_version": 3,
	"name": "web-annotator",
	"version": "1.0",
	"description": "Allows you to annotate on web pages",
	"permissions": [
		"contextMenus",
		"scripting",
		"storage",
		"tabs"
	],
	"host_permissions": [
		"<all_urls>"
	],
	"background": {
		"service_worker": "background.js"
	  },
	"content_scripts": [
		{
			"matches": [
				"<all_urls>"
			],
			"js": [
				"content.js",
				"popup.js"
			],
			"css": [
				"style.css"
			]
		}
	],
	"action": {
		"default_popup": "popup.html",
		"default_icon": "images/icon.png"
	},
	"icons": {
		"128": "images/icon.png"
	}
}